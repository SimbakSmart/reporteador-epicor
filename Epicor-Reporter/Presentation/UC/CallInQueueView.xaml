    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <md:Card Padding="5"
                          md:ElevationAssist.Elevation="Dp4">

                <ge:ResponsiveGrid>
                    <!--Container Right-->
                    <Border ge:ResponsiveGrid.XS="12"  ge:ResponsiveGrid.SM="6" >
                        <StackPanel HorizontalAlignment="Left"  Orientation="Horizontal">
                            
                            <!--SeachBox-->
                            <TextBox 
                                Width="300"
                                Padding="6"
                                 md:HintAssist.Hint="Busqueda..."
                                 md:HintAssist.IsFloating="True" 
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                HorizontalAlignment="Center"
                                Margin="5"
                                />
                            <!--SeachBox-->


                                 <!--Button Search--> 
                                  <Button 
                                     Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                     ToolTip="Presinar para busqueda"
                                     HorizontalAlignment="Center"
                                     Margin="5">
                                <md:PackIcon Kind="Magnify" Width="25" Height="25" />
                                </Button>
                               <!--Button Clear-->
                               <Button 
                                 Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                 ToolTip="Presinar para busqueda"
                                 HorizontalAlignment="Center"
                                 Margin="5">
                                <md:PackIcon Kind="Broom" Width="25" Height="25" />
                            </Button>


                        </StackPanel>
                        <!--Container Right-->
                    </Border>

                    <Border ge:ResponsiveGrid.XS="12"  ge:ResponsiveGrid.SM="6" >
                        <StackPanel HorizontalAlignment="Right"  Orientation="Horizontal">

                            <TextBlock Text="{Binding TotalRecords, StringFormat='Total Records: {0:n0}'}" 
                                      Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   HorizontalAlignment="Center"
                                    Margin="5" />

                        </StackPanel>
                    </Border>

                    <Border ge:ResponsiveGrid.XS="12"  ge:ResponsiveGrid.SM="12" >
                         <StackPanel Margin="5">
                            <DataGrid ItemsSource="{Binding CallItemList}" Height="800" />

                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button 
                                    Width="75"
                                    Command="{Binding MoveBackCommand}"
                                    Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                    HorizontalAlignment="Center"
                                    Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="ArrowLeft" Width="25" Height="25" />
                                        <TextBlock
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                                           Text="Anterior" />
                                        
                                    </StackPanel>
                                </Button>
                                <Button 
                                    Width="117"
                                    Command="{Binding MoveNextCommand}"
                                    Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                    HorizontalAlignment="Center"
                                    Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                       
                                        <TextBlock
                                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                                          Text="Siguiente" />
                                        <md:PackIcon Kind="ArrowRight" Width="25" Height="25" />
                                    </StackPanel>
                                   
                                </Button>
                                <TextBlock Text="Pagina "
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           HorizontalAlignment="Center" Margin="5" />
                                <TextBlock Text="0" Margin="5" 
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}" />
                                <TextBlock Text="De " 
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           HorizontalAlignment="Center" Margin="5" />
                                <TextBlock Text="50" 
                                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                            HorizontalAlignment="Center" Margin="5" />
                            </StackPanel>
                        </StackPanel>
                    </Border>



                </ge:ResponsiveGrid>

            </md:Card>
        </ScrollViewer>
    </Grid>


</UserControl>
