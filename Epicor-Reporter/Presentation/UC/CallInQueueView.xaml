<UserControl x:Class="Presentation.UC.CallInQueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Presentation.ViewModel"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ge="clr-namespace:SourceChord.GridExtra;assembly=GridExtra.Wpf"
             xmlns:local="clr-namespace:Presentation.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:CallInQueueViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="CustomDataGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="LightBlue" />
            <!-- Cambia el color de fondo del encabezado a azul -->
            <Setter Property="Foreground" Value="White" />
            <!-- Cambia el color del texto del encabezado a blanco -->
            <Setter Property="BorderBrush" Value="Gray" />
            <!-- Cambia el color del borde del encabezado si lo deseas -->
            <Setter Property="BorderThickness" Value="1" />
            <!-- Ajusta el grosor del borde del encabezado si lo deseas -->
        </Style>
    </UserControl.Resources>


    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <md:Card Padding="5"
                          md:ElevationAssist.Elevation="Dp4">

                <ge:ResponsiveGrid>
                    <!--Container Right-->
                    <Border ge:ResponsiveGrid.XS="12"  ge:ResponsiveGrid.SM="6" >
                        <StackPanel HorizontalAlignment="Left"  Orientation="Horizontal">
                            
                            <!--SeachBox-->
                            <TextBox 
                                Text="{Binding SearchTerm}"
                                Width="300"
                                Padding="6"
                                 md:HintAssist.Hint="Busqueda..."
                                 md:HintAssist.IsFloating="True" 
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                HorizontalAlignment="Center"
                                Margin="5"
                                />
                            <!--SeachBox-->


                                 <!--Button Search--> 
                                  <Button 
                                     Command="{Binding SearchCommand}"
                                     Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                     ToolTip="Presinar para busqueda"
                                     HorizontalAlignment="Center"
                                     Margin="5">
                                <md:PackIcon Kind="Magnify" Width="25" Height="25" />
                                </Button>



                            <DatePicker
                              Width="150"
                              Padding="6"
                              Language="es-ES"
                              md:HintAssist.Hint="Fecha Consulta..."
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}" 
                                HorizontalAlignment="Center"
                               Margin="5" />
                            <!--Button Search-->
                                  <Button 
                                 Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                 ToolTip="Presinar para busqueda fecha"
                                 HorizontalAlignment="Center"
                                 Margin="5">
                                <md:PackIcon Kind="Magnify" Width="25" Height="25" />
                            </Button>

                            <!--Button Clear-->
                               <Button 
                                  Command="{Binding RefreshCommand}" 
                                 Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                 ToolTip="Presinar para busqueda"
                                 HorizontalAlignment="Center"
                                 Margin="5">
                                <md:PackIcon Kind="Broom" Width="25" Height="25" />
                            </Button>


                        </StackPanel>
                        <!--Container Right-->
                    </Border>

                    <Border ge:ResponsiveGrid.XS="12"  ge:ResponsiveGrid.SM="6" >
                        <StackPanel HorizontalAlignment="Right"  Orientation="Horizontal">

                            
                            <!--Button Clear-->
                            <!--<Button 
                             Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                             ToolTip="Presinar para busqueda"
                             HorizontalAlignment="Center"
                             Margin="5">
                                <md:PackIcon Kind="Broom" Width="25" Height="25" />
                            </Button>-->

                            <TextBlock Text="{Binding TotalRecords, StringFormat='Total Records: {0:n0}'}" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            HorizontalAlignment="Center"
                             Margin="5" />


                        </StackPanel>
                    </Border>

                    <Border ge:ResponsiveGrid.XS="12"  ge:ResponsiveGrid.SM="12" >
                         <StackPanel Margin="5">
                            <!--<DataGrid ItemsSource="{Binding CallItemList}" Height="800" />-->


                            <DataGrid ItemsSource="{Binding CallItemList}"
          AutoGenerateColumns="True" Height="800">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}"
               BasedOn="{StaticResource CustomDataGridHeaderStyle}" />
                                </DataGrid.ColumnHeaderStyle>
                                <!-- Aquí van las columnas del DataGrid -->
                            </DataGrid>


                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button 
                                    Width="55"
                                    Command="{Binding MoveBackCommand}"
                                    Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                    HorizontalAlignment="Center"
                                    Margin="5">
                                    <md:PackIcon Kind="ArrowLeft" Width="25" Height="25" />
                                </Button>
                                <Button 
                                    Width="55"
                                    Command="{Binding MoveNextCommand}"
                                    Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                    HorizontalAlignment="Center"
                                    Margin="5">
                                    <md:PackIcon Kind="ArrowRight" Width="25" Height="25" />
                                </Button>
                                <TextBlock Text="Pagina "
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           HorizontalAlignment="Center" Margin="5" />
                                <TextBlock Text="0" Margin="5" 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                                <TextBlock Text="De " 
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           HorizontalAlignment="Center" Margin="5" />
                                <TextBlock Text="50" 
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                            HorizontalAlignment="Center" Margin="5" />
                            </StackPanel>
                        </StackPanel>
                    </Border>



                </ge:ResponsiveGrid>

            </md:Card>
        </ScrollViewer>


        <Button
            Margin="0 0 50 35"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
           ToolTip="MaterialDesignFloatingActionButton">
            <md:PackIcon
          Width="30"
          Height="30"
          Kind="FilterSettingsOutline" />
        </Button>

        <md:Card   
            Opacity="0.8"
       Visibility="{Binding IsLoading,Mode=TwoWay,Converter={StaticResource BooleanToVisibilityConverter}}">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">

                <ProgressBar
    Margin="0 100 0 0"
   IsIndeterminate="True"
   Width="50"
   Height="50"
   Style="{StaticResource MaterialDesignCircularProgressBar}"
   Value="50" />
                <TextBlock Text="Cargando..." />
            </StackPanel>

        </md:Card>



    </Grid>


</UserControl>
